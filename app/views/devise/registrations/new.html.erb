<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-xs-12">
      <div class="center-content-container" style="width: 50%; margin: 0 auto;">
        <div style="background-color: white; border-radius: 8px; border-top: 10px solid rgb(103, 58, 183); padding: 15px;">
          <h1 class="signup-header exportFormTitle freebirdCustomFont" dir="auto" role="heading" aria-level="1" style="font-family: Roboto,Arial,sans-serif;">Welcome to Shopping Angels!</h1>
          <div class="signup-description" dir="auto" style="font-family: Roboto,Arial,sans-serif;">
            Please fill out the information below so we can better serve you.<br><br>
            Volunteers: We will reach out as soon as we receive a request nearby!<br><br>
            Clients: We will have a volunteer call once they have been paired with you!<br><br>
            Remember: We are a grocery DELIVERY service, not a grocery PURCHASING service, so we do not purchase groceries for clients, we buy them, and then deliver them, and then they pay us back for them!<br><br>
            Liability Notice: Shopping Angels, as an organization, is not liable for any injury or damage to personal items as a result of volunteering for or receiving services from this program.
          </div>
        </div>
        <div class="signup-image" style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
          <%= image_tag "blue_logo.png", style: "width: 100%;" %>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :street1 %>
              <%= f.text_field :street1, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :street2 %>
              <%= f.text_field :street2, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :state %>
              <%= f.text_field :state, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :city %>
              <%= f.text_field :city, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :zip_code %>
              <%= f.text_field :zip_code, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :phone %>
              <%= f.text_field :phone, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :interest, "I Am Interested In" %>
              <%= f.text_field :interest, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :agree_to_pay, "If You're requesting services, you understand and agree to pay for your items upon delivery:" %>
              <%= f.check_box :agree_to_pay, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :age, "What is your age?" %>
              <%= f.text_field :age, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :description, "If You're requesting services, you understand and agree to pay for your items upon delivery:" %>
              <%= f.text_field :description, class: "form-control" %>
            </div>
          </div>

          <div style="background-color: white; border-radius: 8px; margin-top: 15px; padding: 15px;">
            <div class="form-group">
              <%= f.label :comments, "Please leave any additional comments here:" %>
              <%= f.text_field :comments, class: "form-control" %>
            </div>
          </div>

          <%= f.submit "submit", class: "btn btn-primary", style: "margin-top: 15px; background-color: rgb(103, 58, 183); border: 1px solid rgb(103, 58, 183); margin-bottom: 15px;" %>

        <% end %>

      </div>
    </div>
  </div>
</div>
